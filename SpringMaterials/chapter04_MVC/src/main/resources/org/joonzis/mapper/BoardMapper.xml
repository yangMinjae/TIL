<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.joonzis.mapper.BoardMapper">
	<!-- 전체 리스트 -->
	<select id="getList" resultType="org.joonzis.domain.BoardVO">
		SELECT * FROM TBL_BOARD
	</select>
	<!-- 데이터 추가 -->
	<insert id="insert" parameterType="org.joonzis.domain.BoardVO">
		INSERT INTO TBL_BOARD VALUES(
		seq_board.nextval,
		#{title},
		#{content},
		#{writer},
		sysdate,
		null)
	</insert>
	<!-- 게시글 상세 -->
	<select id="read" parameterType="double" resultType="org.joonzis.domain.BoardVO">
		SELECT * FROM TBL_BOARD WHERE BNO = #{bno}
	</select>
	<!-- 데이터 삭제 -->
	<delete id="delete" parameterType="double">
		DELETE FROM TBL_BOARD WHERE BNO = #{bno}
	</delete>
	<!-- 데이터 수정 -->
	<update id="update" parameterType="org.joonzis.domain.BoardVO">
		UPDATE TBL_BOARD SET 
		title=#{title},
		content=#{content},
		writer=#{writer},
		updatedate=sysdate
		where bno = #{bno}
	</update>
</mapper>